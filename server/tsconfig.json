{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": ".", // allow relative imports like "./" and "../"
    "paths": {
      "shared/*": ["../shared/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./build"
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "build"]
}